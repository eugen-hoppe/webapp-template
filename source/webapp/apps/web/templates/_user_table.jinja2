<table class="table table-hover">
  <thead>
    <tr><th>ID</th><th>User</th><th>Email</th></tr>
  </thead>
  <tbody id="user-tbody">
  {% for user in users %}
    <tr id="user-{{ user.id }}"
        hx-get="/web/users/fragment/form?user_id={{ user.id }}"
        hx-target="#user-form-panel"
        hx-swap="innerHTML"
        style="cursor:pointer">
      <td>{{ user.id }}</td>
      <td>{{ user.username }}</td>
      <td>{{ user.email }}</td>
    </tr>
  {% endfor %}
  </tbody>
</table>
